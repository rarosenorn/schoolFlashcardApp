{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "compounds": [
        {
            "name": "Launch Blazor Client and API",
            "configurations": ["Launch API", "Launch Blazor WebAssembly"]
        }
    ],
    "configurations": [
        {
            "name": "Launch API",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-api",
            "program": "${workspaceFolder}/flashcardApp.Api/bin/Debug/net8.0/flashcardApp.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/flashcardApp.Api",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Launch Blazor WebAssembly",
            "type": "pwa-chrome",
            "request": "launch",
            "preLaunchTask": "build-client",
            "url": "http://localhost:5160",
            "webRoot": "${workspaceFolder}/flashcardApp.Client",
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "webpack:///./*": "${webRoot}/*"
            }
        }
    ]
}